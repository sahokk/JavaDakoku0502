package login;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public abstract class Login {
	private String loginUrl, loginIdField, loginPassField, loginButton;
	private WebDriver driver;

	public Login(String loginUrl, String loginIdField, String loginPassField, String loginButton) {
		this.loginUrl = loginUrl;
		this.loginIdField = loginIdField;
		this.loginPassField = loginPassField;
		this.loginButton = loginButton;
		this.driver = new ChromeDriver();
	}

	public void accessLoginPage() {
		System.setProperty("webdriver.chrome.driver",
				"C:\\Users\\user\\Documents\\JavaDakoku0502\\DakokuSystem\\src\\exe\\chromedriver.exe");
		driver.get(loginUrl);
	}

	public void sendLoginIdToField() {

	}

	public void sendLoginPassToField() {

	}

	public void pushLoginButton() {

	}
}
