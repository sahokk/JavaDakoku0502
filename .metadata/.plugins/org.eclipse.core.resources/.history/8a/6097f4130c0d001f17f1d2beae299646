package gui;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.CheckboxGroup;
import java.awt.Frame;
import java.awt.Label;
import java.awt.Panel;
import java.awt.TextArea;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;
import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;

import db_control.DbControl;

public class MainFrame extends Frame implements ActionListener, ItemListener, WindowListener {
	DbControl dbControl;
	Panel centerPanel;
	Panel northPanel;
	Panel southPanel;

	Button dakokuButton;
	Button settingButton;

	CheckboxGroup dakokuItemGroup;

	TextArea mainArea;

	public MainFrame() {
		centerPanel = new Panel(new BorderLayout());
		northPanel = new Panel();
		southPanel = new Panel();

		dakokuButton = new Button("打刻");
		settingButton = new Button("設定");

		dakokuItemGroup = new CheckboxGroup();

		mainArea = new TextArea(18, 80);
		mainArea.setEditable(false);

		setLayout(new BorderLayout());

		northPanel.add(new Label("ログイン項目を選択： "));
		northPanel.add(dakokuItemGroup);
		northPanel.add(dakokuButton);
		southPanel.add(settingButton);
		centerPanel.add(mainArea);

		dakokuButton.addActionListener(this);
		settingButton.addActionListener(this);
		dakokuItemGroup.addItemListener(this);

		add(northPanel, BorderLayout.NORTH);
		add(southPanel, BorderLayout.SOUTH);
		add(centerPanel, BorderLayout.CENTER);
		addWindowListener(this);

		setTitle("打刻システム");
	}

	@Override
	public void windowOpened(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void windowClosing(WindowEvent e) {
		System.exit(0);

	}

	@Override
	public void windowClosed(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void windowIconified(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void windowDeiconified(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void windowActivated(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void windowDeactivated(WindowEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void itemStateChanged(ItemEvent e) {
		// TODO 自動生成されたメソッド・スタブ

	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == dakokuButton) {
			mainArea.setText("dakoku");
		} else if (e.getSource() == settingButton) {
			mainArea.setText("setting");
		}

	}
}
